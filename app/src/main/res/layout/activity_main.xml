<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/activity_main_layout">

    <TextView
        android:id="@+id/topleft"
        android:layout_width="@dimen/length"
        android:layout_height="@dimen/length"
        android:text="@string/top_left"
        android:tag="topLeft"
        android:gravity="center"
        android:textSize="@dimen/textsize"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/topright"
        android:layout_width="@dimen/length"
        android:layout_height="@dimen/length"
        android:text="@string/top_right"
        android:tag="topRight"
        android:gravity="center"
        android:textSize="@dimen/textsize"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottomleft"
        android:layout_width="@dimen/length"
        android:layout_height="@dimen/length"
        android:text="@string/bottom_left"
        android:tag="bottomLeft"
        android:gravity="center"
        android:textSize="@dimen/textsize"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottomright"
        android:layout_width="@dimen/length"
        android:layout_height="@dimen/length"
        android:text="@string/bottom_right"
        android:tag="bottomRight"
        android:gravity="center"
        android:textSize="@dimen/textsize"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:min="0"
        android:max="100"
        android:progress="50"/>

</androidx.constraintlayout.widget.ConstraintLayout>